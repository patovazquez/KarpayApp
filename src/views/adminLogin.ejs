<!DOCTYPE html>
<html lang="en">
 <head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Karpay</title> 
   <!-- link css -->
   <link rel="stylesheet" href="/styles/forms.css">      
  
</head>



    

<body>
 
    <!-- main section -->

    <section class="main-section">    
        <section class="section">  
                <div class="title">
                    <div class="picture">
                        <img src="\images\karpayLogo.png" alt="logo" class= "logo">
                    </div>                
                <p class='titulos'>Karpay Administrador</p>                
                </div>

            <form class="input-fields" method="POST" action="/admin" >

                <% if (typeof(error) != 'undefined') { %>
                
                    <p class="error_message"><%= "El usuario y/o contraseña es incorrecto" %> </p>
                <% } %>

                <input class="input-decoration" type="email" placeholder="E-mail" name="email" value=<% if (typeof(error) != 'undefined') { %> <%= old.email %>  <% } %>>
                <input class="input-decoration" type="password" placeholder="Contraseña" name="password">
                
                <button class="submit-button">Iniciar Sesión</button>                
                
            </form>
        </section>
    </section>
    <!-- fin main section --> 
</body>
</html>