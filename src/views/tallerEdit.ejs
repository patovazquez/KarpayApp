<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <title>Karpay</title>     
    <!-- link css -->
    <link rel="stylesheet" href="/styles/forms.css">
    
  </head>



<!-- link js -->
<script src= "/js/main.js" defer></script>

<!-- header -->
<%- include('adminPartials/adminHeader') %>
<!--fin del header -->

   
<body>  
   
    <section class="main-section">    
        <section class="section">
            <div class="title">
                <div class="picture">
                    <img src="\images\karpayLogo.png" alt="logo" class= "logo">
                </div>            
            <p class='titulos'>Editando Novedades</p>            
            </div>

                
            
            <form method="POST" class = "input-fields"action= "/admin/talleres/edit/<%= oneTaller.id %>?_method=PUT" enctype="multipart/form-data" id='usersForm'>
               
                <div class="error_messages">
                    <% if (typeof(errors) != 'undefined') { %>

                        <% for( let index = 0; index < errors.length; index++ ) { %>
                            <p><%= errors[index].msg %> </p>
                        <% } %> 

                    <% } %>

                </div>
                
                    <label for="" class="label_decoration">Titulo:</label>
                    <input class="input-decoration" type="text" placeholder="Titulo" name="title" value= "<%= oneTaller.title %>">
                    
                    <div class="description_box">
                        <label for="" class="label_decoration">Resumen:</label>
                       <textarea name="resume" id="" cols="30" rows="10"><%= oneTaller.resume %></textarea>
    
                     </div>
                     <div class="description_box">
                        <label for="" class="label_decoration">Descripci√≥n:</label>
                       <textarea name="description" id="" cols="30" rows="10"> <%= oneTaller.description %></textarea>
    
                     </div>
                    
                    <div class= "avatar">
                        <label for="" class="label_decoration">Fotos</label>
                        <input class="img_field" type="file" name="workshop_img" id="" enctype="multipart/form-data">
                    </div>
                    <button type="submit" class="submit-button">Publicar</button>
                
            </form>

        </section>
    </section>      
</body>
</html>