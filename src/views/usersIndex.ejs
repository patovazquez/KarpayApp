<%- include('partials/header') %>

<!-- link css -->
<link rel="stylesheet" href="/styles/indexes.css">

<!-- header -->
<%- include('adminPartials/adminHeader') %>
<!--fin del header -->

    <h2>Index de usuarios </h2>
    <section class= "buttons-section">
        <a href="/admin/users/register"><button class="users-button">Nuevo Usuario</button> </a>        
    </section>

    <section class="main-section">

        <section class="grid-container">
            <% users.forEach(users => { %>
                
                <article class= 'usersList'>
                    <a href="users/edit/<%= users.id %>">
                        <button class= "generalButton">Editar</button>    
                    </a>

                    <form action="/admin/users/delete/<%= users.id %>?_method=DELETE" method="POST" enctype="multipart/form-data" id="delete">
                        <button class= "generalButton">Eliminar</a></button>
                    </form>
                    
                    
                    <img id="myImg" src="/images/users/<%= users.image %>" class="usersImage" alt="Image">               
                    <p><%= users.first_name %> <%= users.last_name %></p>              
                    
                                 
                </article>
            
            
            <% }) %>    
            
        </section>
    </section>
        
<%- include('partials/footer') %>
